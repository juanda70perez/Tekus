@model Tekus.Entities.Supplier
@{
    ViewData["Title"] = "Editar proveedor";
}

<h2>Editar proveedor</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Identification" class="control-label">Nombre</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Nombre</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmailAddress" class="control-label">Correo electrónico</label>
        <input asp-for="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>    
    <br />
    <h4>Servicios ofrecidos</h4>
    <div>
        <table id="services" class="display">
            <thead>
                <tr>
                    <th>Servicio</th>
                    <th>Valor</th>
                    <th>Paises</th>
                </tr>
            </thead>
        </table>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts{
    <script>
        $(document).ready(function () {
            var supplierID = '@Model.SupplierID';
            let table = $('#services').DataTable({
                 ajax: {
                     url: '/api/suppliers/' + supplierID,
                     dataSrc: 'supplierServices'
                 },
                 columns: [
                     { data: 'service.name' },
                     { data: 'service.price' },
                     { data: 'countries' },
                 ],
                 "paging": true,
                 "searching": true,
                 "ordering": true,
                 "info": true
             });             
         });
    </script>
}
